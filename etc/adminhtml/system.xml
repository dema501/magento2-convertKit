<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../Magento/Config/etc/system_file.xsd">
    <system>
        <section id="newsletter">
            <group id="convertkit" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>ConvertKit Notification</label>
                <field id="enable" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="api_key" translate="label" type="text" backend_model="Magento\Config\Model\Config\Backend\Encrypted" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>API Key</label>
                    <depends>
                        <field id="enable">1</field>
                    </depends>
                </field>

                <field id="api_secret" translate="label" type="obscure" backend_model="Magento\Config\Model\Config\Backend\Encrypted" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>API Secret</label>
                    <depends>
                        <field id="enable">1</field>
                    </depends>
                </field>

                <field id="form_id" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Form Id</label>
                    <depends>
                        <field id="enable">1</field>
                    </depends>
                </field>

                <field id="tags" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Tags</label>
                    <comment>Comma-separated list of tag ids to subscribe to.</comment>
                    <depends>
                        <field id="enable">1</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>